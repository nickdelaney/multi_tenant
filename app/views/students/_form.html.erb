<%= form_for @student do |f| %>
	<div class="form-group">
		<%= f.label :first_name, class: 'col-sm-2 control-label' %>
		<div class="col-sm-10">
			<%= f.text_field :first_name, {:class => 'form-control'} %>
		</div>
	</div>

	<div class="form-group">
		<%= f.label :last_name, class: 'col-sm-2 control-label'  %>
		<div class="col-sm-10">
			<%= f.text_field :last_name, {:class => 'form-control'} %>
			<%= f.hidden_field :user_id, :value => params[:id] %>
		</div>
	</div>

	<div class="form-group">
		<%= f.label :birthdate, class: 'col-sm-2 control-label'  %>
		<div class="col-sm-10">
			<%= f.text_field :birthdate, {:class => 'form-control'} %>
		</div>
	</div>

	<div class="form-group">
		<%= f.label :preschool_id, class: 'col-sm-2 control-label'  %>
		<div class="col-sm-10">
			<%= f.collection_select :preschool_id, Preschool.all, :id, :name, {prompt: "Select a preschool"}, {class: "form-control"} %>
		</div>
	</div>

	<div class="form-group">
		<%= f.submit  :class => 'btn btn-default' %>
	</div>				
<% end %>