<%= page_header "All members" %>
<%= page_desc "listing all members below" %>
<%= render  '/layouts/header' %>

			<h2><%= link_to '+ Add User', admin_registrations_new_path, {:class => "btn btn-default"} %></h2>
<div class="table-responsive">
	<table class="table table-striped datatable">
		<thead>
			<tr>
				<td>Name</td>
				<td>Description</td>
				<td>Role</td>
				<td>Date Created</td>
				<td></td>
			</tr>
		</thead>
		<tbody>
			<% @users.each do |user| %>
				<tr>
					<td><%= user.email %></td>
					<td></td>
					<td><%= user.role.name %></td>
					<td><%= user.created_at %></td>
					<td>
						<%= link_to 'View', admin_user_path(user) %> |
						<%= link_to 'Edit', edit_admin_user_path(user) %> |
						<%= link_to 'Destroy', admin_user_path(user), method: :delete, data: { confirm: 'Are you sure?' } %>
					</td>
				</tr>
			<% end %>
		</tbody>
	</table>
</div>

</div>