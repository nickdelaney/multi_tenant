<%= page_header "#{@user.first_name} #{@user.last_name}" %>
<%= page_desc "showing profile for #{@user.first_name} #{@user.last_name}" %>
	<h2>Students</h2>
	<% @students.each do |student| %>
	<p class="lead">
		<%= "#{student.first_name} #{student.last_name}" %>
		<%= link_to 'View', admin_student_path(student) %> | 
		<%= link_to 'Destroy', admin_student_path(student), method: :delete, data: { confirm: 'Are you sure?' } %>
	</p>
	<% end %>
	<p>
		<%= link_to 'Add Student', new_admin_user_student_path(@user, :id => @user.id) %> | 
		<%= link_to 'Edit', edit_admin_user_path(@user) %> |
		<%= link_to 'Destroy', admin_user_path(@user), method: :delete, data: { confirm: 'Are you sure?' } %>
	</p>
</div>