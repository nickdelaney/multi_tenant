<%= page_header "Roster for #{section_name}" %>
<%= page_desc "showing students for #{section_name}" %>

<div class="table-responsive">
	<table class="table table-striped datatable">
		<thead>
			<tr>
				<td>Student Name</td>
				<td>Birthdate</td>
				<td></td>
			</tr>
		</thead>
		<tbody>
			<% @rosters.each do |roster| %>
				<tr>
					<td><%= "#{roster.student.try(:first_name)} #{roster.student.try(:last_name)}" %></td>
					<td><%= roster.student.try(:birthdate) %></td>

					<td>
						<%= link_to 'View', admin_roster_path(roster) %> |
						<%= link_to 'Edit', edit_admin_section_path(roster) %> |
						<%= link_to 'Destroy', admin_section_path(roster), method: :delete, data: { confirm: 'Are you sure?' } %>
					</td>
				</tr>
			<% end %>
		</tbody>
	</table>
</div>

</div>