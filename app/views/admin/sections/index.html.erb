<%= page_header "Sections" %>
<%= page_desc "listing all sections below" %>
<%= render  '/layouts/header' %>
<div class="table-responsive">
	<table class="table table-striped datatable">
		<thead>
			<tr>
				<td>Name</td>
				<td>Class Size</td>
				<td>Start Time</td>
				<td>Preschool</td>
				<td>Class Count</td>
				<td></td>
			</tr>
		</thead>
		<tbody>
			<% @sections.each do |section| %>
				<tr>
					<td><%= section.name %></td>
					<td><%= section.class_size %></td>
					<td><%= section.section_time %></td>
					<td><%= section.preschool.name %></td>
					<td><%= section.rosters.count %></td>
					<td>
						<%= link_to 'View Roster', admin_roster_path(section) %> |
						<%= link_to 'Edit', edit_admin_section_path(section) %> |
						<%= link_to 'Destroy', admin_section_path(section), method: :delete, data: { confirm: 'Are you sure?' } %>
					</td>
				</tr>
			<% end %>
		</tbody>
	</table>
</div>

</div>