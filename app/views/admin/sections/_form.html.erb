<%= form_for [:admin , @section] do |f| %>
	<div class="form-group">
		<%= f.label :name %>
		<%= f.text_field :name, {:class => 'form-control'} %>
	</div>

	<div class="form-group">
		<%= f.label :description %>
		<%= f.text_field :description, {:class => 'form-control'} %>
	</div>

	<div class="form-group">
		<%= f.label :class_size%>
		<%= f.number_field :class_size, {:class => 'form-control'} %>
	</div>

	<div class="form-group">
		<%= f.label :start_time %>
		<%= f.text_field :section_time, {:class => 'form-control'} %>
	</div>

	<div class="form-group">
		<%= f.label :preschool_id %>
		<%= f.collection_select :preschool_id, Preschool.all, :id, :name, {prompt: "Select a preschool"}, {class: "form-control"} %>
	</div>


	<div class="form-group">
		<%= f.submit :class => 'btn btn-default' %>
	</div>				
<% end %>