<%= form_for [:admin , @student] do |f| %>
	<div class="form-group">
		<%= f.label :first_name %>
		<%= f.text_field :first_name, {:class => 'form-control'} %>
	</div>

	<div class="form-group">
		<%= f.label :last_name %>
		<%= f.text_field :last_name, {:class => 'form-control'} %>
		<%= f.hidden_field :user_id, :value => params[:id] %>
	</div>

	<div class="form-group">
		<%= f.submit  :class => 'btn btn-default' %>
	</div>				
<% end %>