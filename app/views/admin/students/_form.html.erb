<%= form_for [:admin , @student] do |f| %>
	<div class="form-group">
		<%= f.label :first_name %>
		<%= f.text_field :first_name, {:class => 'form-control'} %>
	</div>

	<div class="form-group">
		<%= f.label :last_name %>
		<%= f.text_field :last_name, {:class => 'form-control'} %>
		<%= f.hidden_field :user_id, :value => params[:id] %>
	</div>

	<div class="form-group">
		<%= f.label :birthdate %>
		<%= f.text_field :birthdate, {:class => 'form-control'} %>
	</div>

	<div class="form-group">
		<%= f.label :preschool_id %>
		<%= f.collection_select :preschool_id, Preschool.all, :id, :name, {prompt: "Select a preschool"}, {class: "form-control"} %>
	</div>

	<div class="form-group">
		<%= f.submit  :class => 'btn btn-default' %>
	</div>				
<% end %>