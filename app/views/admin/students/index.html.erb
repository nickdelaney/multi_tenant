<%= page_header "All students" %>
<%= page_desc "Listing all students below" %>
<%= render  '/layouts/header' %>

<h2><%= link_to '+ Add Student', new_admin_student_path, {:class => "btn btn-default"} %></h2>
<div class="table-responsive">
	<table class="table table-striped datatable">
		<thead>
			<tr>
				<td>First Name</td>
				<td>Last Name</td>
				<td>Birthdate</td>
				<td>User</td>
				<td>Section</td>
				<td></td>
			</tr>
		</thead>
		<tbody>
			<% @students.each do |student| %>
				<tr>
					<td><%= student.first_name %></td>
					<td><%= student.last_name %></td>
					<td><%= student.birthdate %></td>
					<td><%= student.user.try(:email) %></td>
					<td>
						<% @rosters =  student.rosters %>
						<% @rosters.each do |roster| %>
							<%= roster.section.try(:name) %>
						<% end %>
					</td>
					<td>
						<%= link_to 'View Student', admin_student_path(student) %> |
						<%= link_to 'Edit', edit_admin_student_path(student) %> |
						<%= link_to 'Destroy', admin_student_path(student), method: :delete, data: { confirm: 'Are you sure?' } %>
					</td>
				</tr>
			<% end %>
		</tbody>
	</table>
</div>

</div>